#include <stdio.h>

int main() {
    
    printf("Desafio Super Trunfo - Nivel Mestre\n\n");

    // Carta 1 (Porto Alegre) ======
    char estado1 = 'A';
    char codigo1[4] = "A01";
    char nomeCidade1[50] = "Porto Alegre";
    unsigned long int populacao1 = 1388794;
    int pontos1 = 30;
    float area1 = 496.8;
    float pib1 = 82.56;

    // Carta 2 (Florianópolis) ======
    char estado2 = 'B';
    char codigo2[4] = "A02";
    char nomeCidade2[50] = "Florianopolis";
    unsigned long int populacao2 = 558486;
    int pontos2 = 12;
    float area2 = 675.4;
    float pib2 = 23.6;
  
    // Cálculos automáticos
    float densidade1 = populacao1 / area1;
    float pibPerCapita1 = (pib1 * 1000000000.0) / populacao1; // PIB em reais

    float densidade2 = populacao2 / area2;
    float pibPerCapita2 = (pib2 * 1000000000.0) / populacao2;

    // Super Poder
    float superPoder1 = (float)populacao1 + area1 + (pib1 * 1000000000.0) + pontos1 + pibPerCapita1 + (1.0 / densidade1);
    float superPoder2 = (float)populacao2 + area2 + (pib2 * 1000000000.0) + pontos2 + pibPerCapita2 + (1.0 / densidade2);
    
    // Exibição da Carta 1
    printf("=== Carta 1 ===\n");
    printf("Estado: %c\n", estado1);
    printf("Codigo: %s\n", codigo1);
    printf("Nome da Cidade: %s\n", nomeCidade1);
    printf("Populacao: %lu\n", populacao1);
    printf("Area: %.2f km2\n", area1);
    printf("PIB: %.2f bilhoes de reais\n", pib1);
    printf("Pontos Turisticos: %d\n", pontos1);
    printf("Densidade Populacional: %.2f hab/km2\n", densidade1);
    printf("PIB per capita: %.2f reais\n", pibPerCapita1);
    printf("Super Poder: %.2f\n", superPoder1);

    // Exibição da Carta 2
    printf("\n=== Carta 2 ===\n");
    printf("Estado: %c\n", estado2);
    printf("Codigo: %s\n", codigo2);
    printf("Nome da Cidade: %s\n", nomeCidade2);
    printf("Populacao: %lu\n", populacao2);
    printf("Area: %.2f km2\n", area2);
    printf("PIB: %.2f bilhoes de reais\n", pib2);
    printf("Pontos Turisticos: %d\n", pontos2);
    printf("Densidade Populacional: %.2f hab/km2\n", densidade2);
    printf("PIB per capita: %.2f reais\n", pibPerCapita2);
    printf("Super Poder: %.2f\n", superPoder2);

    // Comparações em tabela
    printf("\n=== Comparacao de Cartas ===\n");
    printf("%-25s %-20s\n", "Atributo", "Vencedora");
    printf("-----------------------------------------\n");
    printf("%-25s %-20s\n", "Populacao", (populacao1 > populacao2) ? nomeCidade1 : nomeCidade2);
    printf("%-25s %-20s\n", "Area", (area1 > area2) ? nomeCidade1 : nomeCidade2);
    printf("%-25s %-20s\n", "PIB", (pib1 > pib2) ? nomeCidade1 : nomeCidade2);
    printf("%-25s %-20s\n", "Pontos Turisticos", (pontos1 > pontos2) ? nomeCidade1 : nomeCidade2);
    printf("%-25s %-20s\n", "Densidade Populacional", (densidade1 < densidade2) ? nomeCidade1 : nomeCidade2); // menor vence
    printf("%-25s %-20s\n", "PIB per capita", (pibPerCapita1 > pibPerCapita2) ? nomeCidade1 : nomeCidade2);
    printf("%-25s %-20s\n", "Super Poder", (superPoder1 > superPoder2) ? nomeCidade1 : nomeCidade2);

    return 0;
}
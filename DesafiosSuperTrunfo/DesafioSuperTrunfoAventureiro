#include <stdio.h>

int main() {
    printf("Desafio Super Trunfo - Nivel Aventureiro\n\n");

    // Carta 1 (Porto Alegre) ======
    char estado1 = 'A';
    char codigo1[4] = "A01";
    char nomeCidade1[50] = "Porto Alegre";
    int populacao1 = 1388794;
    int pontos1 = 30;
    float area1 = 496.8;
    float pib1 = 82.56;

    // Carta 2 (Florianópolis) ======
    char estado2 = 'B';
    char codigo2[4] = "A02";
    char nomeCidade2[50] = "Florianopolis";
    int populacao2 = 558486;
    int pontos2 = 12;
    float area2 = 675.4;
    float pib2 = 23.6;
  
    // Cálculos automáticos
    float densidade1 = populacao1 / area1;
    float pibPerCapita1 = pib1 * 1000000000 / populacao1; // PIB estava em bilhões

    float densidade2 = populacao2 / area2;
    float pibPerCapita2 = pib2 * 1000000000 / populacao2;

    // Exibição da Carta 1
    printf("=== Carta 1 ===\n");
    printf("Estado: %c\n", estado1);
    printf("Codigo: %s\n", codigo1);
    printf("Nome da Cidade: %s\n", nomeCidade1);
    printf("Populacao: %d\n", populacao1);
    printf("Area: %.2f km2\n", area1);
    printf("PIB: %.2f bilhoes de reais\n", pib1);
    printf("Numero de Pontos Turisticos: %d\n", pontos1);
    printf("Densidade Populacional: %.2f hab/km2\n", densidade1);
    printf("PIB per capita: %.2f reais\n", pibPerCapita1);

    // Exibição da Carta 2
    printf("\n=== Carta 2 ===\n");
    printf("Estado: %c\n", estado2);
    printf("Codigo: %s\n", codigo2);
    printf("Nome da Cidade: %s\n", nomeCidade2);
    printf("Populacao: %d\n", populacao2);
    printf("Area: %.2f km2\n", area2);
    printf("PIB: %.2f bilhoes de reais\n", pib2);
    printf("Numero de Pontos Turisticos: %d\n", pontos2);
    printf("Densidade Populacional: %.2f hab/km2\n", densidade2);
    printf("PIB per capita: %.2f reais\n", pibPerCapita2);

    return 0;
}
